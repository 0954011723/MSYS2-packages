# Maintainer: Erich Gubler <erichdongubler@gmail.com>

pkgname=moreutils
pkgver=0.61
pkgrel=1
pkgdesc="A growing collection of the unix tools that nobody thought to write thirty years ago"
arch=('i686' 'x86_64')
url="http://joeyh.name/code/moreutils/"
license=('GPL2')
makedepends=('docbook-xml' 'git')
source=("git+https://git.joeyh.name/git/moreutils.git#tag=$pkgver")
sha256sums=('SKIP')

package() {
	cd "$srcdir"/$pkgname
	install_dir="$pkgdir"/usr
	make DOCBOOKXSL="$(ls -d /usr/share/xml/docbook/xsl-stylesheets-* | tail --lines=1)"
	rename .exe '' *.exe
	make PREFIX="$install_dir" install
}
