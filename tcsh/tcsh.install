post_install() {
  usr/bin/grep -q '/usr/bin/csh' etc/shells || echo '/usr/bin/csh' >> etc/shells
  usr/bin/grep -q '/usr/bin/tcsh' etc/shells || echo '/usr/bin/tcsh' >> etc/shells
}

post_upgrade() {
  post_install
}

pre_remove() {
  usr/bin/sed -i '/^\/usr\/bin\/csh/d' etc/shells
  usr/bin/sed -i '/^\/usr\/bin\/tcsh/d' etc/shells
}
