# Maintainer: Alexey Pavlov <alexpux@gmail.com>

pkgname=msys2-base
pkgver=1.1
pkgrel=6
pkgdesc="MSYS2 base files"
arch=('any')
url="https://sourceforge.net/projects/msys2/"
license=('BSD')
groups=('base')
source=('cmd'
        'dep-search'
        'mingw32_shell.bat'
        'mingw64_shell.bat'
        'msys2_shell.bat'
        'msys.ico'
        'regen-info.sh'
        'start'
        'shells')
md5sums=('9ffd57721725e961ffd5e311d6c2f374'
         'e6a830e08fce049c78272d275f57d57f'
         '421d952b96dd442185a84095e0b410e6'
         '153322f273041b9d85154f6e0bb7b59e'
         '637c423c68daf289b832397911f073d6'
         '6999c504c2fddc295fb9a96a55baa40b'
         '3b6753667b61800db1a30c614efd1ee1'
         '900c95162b9c3f7a29912408e0579852'
         '40132f918d61aaa3022ac4594a325627')

package() {
  mkdir -p $pkgdir/usr/{bin,sbin}
  mkdir -p $pkgdir/etc

  cp -f $srcdir/mingw32_shell.bat $pkgdir/
  cp -f $srcdir/mingw64_shell.bat $pkgdir/
  cp -f $srcdir/msys2_shell.bat $pkgdir/
  cp -f $srcdir/msys.ico $pkgdir/
  cp -f $srcdir/cmd $pkgdir/usr/bin/
  cp -f $srcdir/start $pkgdir/usr/bin
  cp -f $srcdir/dep-search $pkgdir/usr/bin
  cp -f $srcdir/regen-info.sh $pkgdir/usr/sbin/
  cp -f $srcdir/shells $pkgdir/etc/
}
