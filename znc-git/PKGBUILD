# Maintainer: Yasuhiro MATSUMOTO <mattn.jp@gmail.com>

_pkgname=znc
pkgname=${_pkgname}-git
pkgver=8f2c17c3099623b7165c7624c3020fc6242196c1
pkgrel=1
pkgdesc='An IRC bouncer with modules & scripts support'
url='http://znc.in/'
license=('Apache 2.0')
arch=('i686' 'x86_64')
provides=('znc')
conflicts=('znc')
depends=('openssl')
makedepends=('swig' 'tcl' 'python' 'perl' 'cyrus-sasl' 'icu-devel' 'gettext-devel' 'libsasl-devel')
optdepends=('tcl: modtcl module'
            'python: modpython module'
            'perl: modperl module'
            'cyrus-sasl: cyrusauth module')

source=('znc::git+https://github.com/znc/znc#branch=master'
		znc-configure-msys2.patch)
sha1sums=('SKIP'
          '405734d384dc17037af6e16c759b0e50f0816a36')

prepare() {
  cd "${srcdir}/${_pkgname}"

  patch -p1 -i ${srcdir}/znc-configure-msys2.patch
  git submodule update --init --recursive
  ./autogen.sh
}

build() {
  cd "$srcdir/znc"
  ./configure --prefix=/usr \
    --enable-cyrus \
    --enable-tcl \
    --enable-perl \
    --enable-python
  make
}

package() {
  cd "$srcdir/znc"
  make DESTDIR="$pkgdir" install
}
