post_install() {
  usr/bin/grep -q '/usr/bin/ksh' etc/shells || echo '/usr/bin/ksh' >> etc/shells
  usr/bin/grep -q '/usr/bin/mksh' etc/shells || echo '/usr/bin/mksh' >> etc/shells
}

post_upgrade() {
  post_install
}

pre_remove() {
  usr/bin/sed -i '/^\/usr\/bin\/ksh/d' etc/shells
  usr/bin/sed -i '/^\/usr\/bin\/mksh/d' etc/shells
}
